<Window x:Class="Rwall.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rwall" 
        Height="768" Width="1024" 
        MinHeight="768" MinWidth="1024"
        Background="DimGray"
        SizeChanged="Window_SizeChanged">
    <Grid x:Name="MainGrid">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Foreground="White">Click on an image to set it as your wallpaper with the selected settings.</TextBlock>
        <WrapPanel x:Name="WallPaperWrapPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
