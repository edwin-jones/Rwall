<Window x:Class="Rwall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:Shared="clr-namespace:Rwall.Shared"
        xmlns:Controls="clr-namespace:Rwall.Controls"
        Title="Rwall" 
        Height="700" Width="1000" 
        MinHeight="700" MinWidth="1000"
        SizeChanged="Window_SizeChanged"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    <Window.Background>
        <RadialGradientBrush GradientOrigin="0.5,0.5">
            <GradientStop Color="Gray" Offset="0.0" />
            <GradientStop Color="#404040" Offset="1" />
        </RadialGradientBrush>
    </Window.Background>
    <Window.Resources>
        
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" >
            <Rectangle Height="10"/>
            
            <TextBlock  HorizontalAlignment="Center" FontSize="16" Foreground="White">Click on an image to set it as your wallpaper with the selected settings.</TextBlock>
            <TextBlock  HorizontalAlignment="Center" FontSize="16" Foreground="White">Use the textbox below to search different subreddits.</TextBlock>

            <Rectangle Height="10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Name="SubredditNameTextBox" HorizontalAlignment="Center" Width="300"/>
                <Rectangle Width="10" />
                <Button HorizontalAlignment="Center" Content="Go" Width="50" Click="OnGoButtonClick"/>
            </StackPanel>

            <Rectangle Height="10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock FontSize="16" Foreground="White">Wallpaper Style:</TextBlock>
                <Rectangle Width="10" />
                <ComboBox Name="WallpaperStyleComboBox" Width="100" />
            </StackPanel>

            <Rectangle Height="5" />
   
            <WrapPanel x:Name="WallPaperWrapPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Name="UserPromptTextBlock" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontStyle="Italic"></TextBlock>
    </Grid>
</Window>
